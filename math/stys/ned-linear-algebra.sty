\ProvidesPackage{ned-linear-algebra}

%% Vectors

% To get both bold and roman letters, the bm documentation describes
% source: http://www.ctex.org/documents/packages/math/bm.pdf
\newcommand{\mathrmbold}[1]{
  \bm{\mathrm{#1}}
}

\renewcommand{\vec}[1]{
  \mathrmbold{#1}
}

% Basis vector
\newcommand{\bvec}[1]{
  \vec{e}_{\mathrmbold{#1}}
}

% Common vector names
\newcommand{\vecmu}{\vec{\mu}}
\newcommand{\vmu}{\vecmu}
\newcommand{\vmup}{\vecmu^{\prime}}
\newcommand{\vecu}[1][]{
  \vec{u_{\mathrmbold{#1}}}
}
\newcommand{\vecsigma}{\vec{\sigma}}
\newcommand{\vecv}{\vec{v}}
\newcommand{\vecw}{\vec{w}}
\newcommand{\vecx}{\vec{x}}
\newcommand{\vx}{\vec{x}}
\newcommand{\vecy}{\vec{y}}
\newcommand{\vecz}{\vec{z}}
\newcommand{\veczero}{\vec{0}}

%% Literal Matrices

% Would be great if this worked for n-dimensional matrices right?
\newcommand{\diagonal}[3]{
  \begin{bmatrix}
    #1 \\
      &#2 \\
      &  &\ddots \\
      &  & & #3
  \end{bmatrix}
}

%% Named Matrices

\newcommand{\mtx}[1]{\mathrmbold{#1}}

% Common matrix names.
\newcommand{\mtxA}{\mtx{A}}
\newcommand{\mtxB}{\mtx{B}}
\newcommand{\mtxD}{\mtx{D}}
\newcommand{\mtxI}{\mtx{I}}
\newcommand{\mtxL}{\mtx{L}}
\newcommand{\mtxQ}{\mtx{Q}}
\newcommand{\mtxR}{\mtx{R}}
\newcommand{\mtxU}{\mtx{U}}
\newcommand{\mtxX}{\mtx{X}}

%% Common Matrix Decompositions

\newcommand{\mtxLU}{\mtxL\mtxU}
\newcommand{\mtxLDU}{\mtxL\mtxD\mtxU}
\newcommand{\mtxQDQt}{\mtxQ\mtxD\mtxQ\tran}
\newcommand{\mtxQtDQ}{\mtxQ\tran\mtxD\mtxQ}
\newcommand{\mtxQR}{\mtxQ\mtxR}
\newcommand{\mtxQDUt}{\mtxQ\mtxD\mtxU\tran}
\newcommand{\mtxUDQt}{\mtxU\mtxD\mtxQ\tran}

%% Common Matrix Combinations

\newcommand{\mtxAtA}{\mtxA\tran\mtxA}
\newcommand{\mtxAAt}{\mtxA\mtxA\tran}
\newcommand{\mtxAB}{\mtxA\mtxB}
\newcommand{\mtxBA}{\mtxB\mtxA}
\newcommand{\mtxQD}{\mtxQ\mtxD}
\newcommand{\mtxDQ}{\mtxD\mtxQ}
\newcommand{\mtxUD}{\mtxU\mtxD}

%% Transposed Matrices

\newcommand{\mtxAt}{\mtxA\tran}
\newcommand{\mtxBt}{\mtxB\tran}
\newcommand{\mtxQt}{\mtxQ\tran}
\newcommand{\mtxUt}{\mtxU\tran}

%% Inverted Matrices

\newcommand{\mtxAinv}{\inv{\mtxA}}
\newcommand{\mtxDinv}{\inv{\mtxD}}

%% Subscripts

\newcommand{\subii}{_{i, i}}
\newcommand{\subvmu}{_{\vmu}}
\newcommand{\subvmux}{_{\vmux}}
\newcommand{\subvx}{_{\vecx}}
\newcommand{\submA}{_{\mtxA}}
\newcommand{\submB}{_{\mtxB}}

%% Operations

\newcommand{\innerprod}[2]{
  \langle #1, #2 \rangle
}
\newcommand{\norm}[1]{
  \left\Vert #1 \right\Vert
}
\newcommand{\normsq}[1]{
  \left\Vert #1 \right\Vert^2
}
\newcommand*{\tran}{
  ^{\mkern-1.5mu\mathsf{T}}
}
% Feels dumb, but otherwise you get "double superscript" problems.
\newcommand*{\ptran}{
  ^{\prime\mkern-1.5mu\mathsf{T}}
}
\newcommand{\vectransvec}[1]{
  \parenstrans{#1}
  \parens{#1}
}

%% Spaces Of Matrices

\newcommand{\mtxspace}[1]{
  \reals^{#1 \times #1}
}
