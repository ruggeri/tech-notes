%% Dataset

\newcommand{\dset}{\mathcal{D}}

% Helper for iteration over dataset
\newcommand{\xinD}{x_i \in \dset}

%% Mu

% mu x
\newcommand{\mux}{\mu_x}
\newcommand{\vmux}{\vecmu_{\vecx}}

% mu mu_x
\newcommand{\mumux}{\mu_{\mu_x}}
\newcommand{\mumuxp}{
  \mu'_{\mux}
}
\newcommand{\vmumux}{\vmu_{\vmux}}
\newcommand{\vmumuxp}{\vmup_{\vmux}}

%% Rho

% rho mu_x
\newcommand{\rhomux}{\rho_{\mux}}
\newcommand{\rhomuxp}{\rho^\prime_{\mux}}

% rho x
\newcommand{\rhox}{\rho_{x}}

%% Sigma

% sigma x
\newcommand{\sigmax}{\sigma_x}
% sigma mu_x
\newcommand{\sigmamux}{\sigma_{\mux}}
\newcommand{\sigmamuxp}{\sigma^{\prime}_{\mux}}

%% Variance

\newcommand{\var}{\sigma^2}
\newcommand{\vecvar}{\vecsigma^{2}}

%% Covariance matrix

\newcommand{\covmtx}{\mtx{\Sigma}}
\newcommand{\covmtxp}{\mtx{\Sigma}^{\prime}}

%% Named covariance matrices

% Covariance for operations.
\newcommand{\covmtxA}{\covmtx\submA}
\newcommand{\covmtxB}{\covmtx\submB}
\newcommand{\covmtxBA}{\covmtx_{\mtxBA}}

% Covariance for variables.
\newcommand{\covmtxmux}{\covmtx\subvmux}
\newcommand{\covmtxx}{\covmtx\subvx}
\newcommand{\covmtxz}{\covmtx\subvz}

%% Named variances

% var mu_x
\newcommand{\varmux}{\var_{\mux}}
\newcommand{\varmuxp}{
  \sigma^{'2}_{\mux}
}

% var x
\newcommand{\varx}{\var_x}
