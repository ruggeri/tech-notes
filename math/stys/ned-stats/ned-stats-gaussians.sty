% Helper useful when working with Gaussians.
\newcommand{\nexpf}[2]{
  \nexp{
    -\frac{#1}{#2}
  }
}

%% Gaussian Integral

\newcommand{\gaussianexp}[1][x]{
  \nexp{-{#1}^2}
}
\newcommand{\gaussianint}[1][x]{
  \int_\reals \gaussianexp[#1] \diff{#1}
}

%% Normal Distribution

% Parameterizable normal distribution
\newcommand{\normal}[2]{
  \mathcal{N}\parens{#1, #2}
}
\newcommand{\normalc}[1]{
  \frac{1}{\sqrt{\twopi #1}}
}
\newcommand{\normaleq}[3][x]{
  \normalc{#3}
  \nexpf{
    \parensq{#1 - #2}
  }{2 #3}
}

% Normals with standard parameters.
\newcommand{\nnormal}{
  \normal{\mu}{\var}
}
\newcommand{\nnormalc}{
  \normalc{\var}
}
\newcommand{\nnormaleq}[1][x]{
  \normaleq[#1]{\mu}{\var}
}

% Unit normal distribution
\newcommand{\snormal}{\normal{0}{1}}
\newcommand{\snormalc}{\invsqrttwopi}
\newcommand{\snormaleq}[1][x]{
  \snormalc
  \snormalexp[#1]
}
\newcommand{\snormalexp}[1][x]{
  \nexpf{{#1}^2}{2}
}

% Multivariate normal
\newcommand{\mnormalc}[1][\covmtx]{
  \invf{
    \sqrt{
      \parens{\twopi}^n
      \norm{{#1}}^2
    }
  }
}

\newcommand{\vmuxdiff}[0]{
  \parens{
    \vmux - \vmumux
  }
}

\newcommand{\vxdiff}[0]{
  \parens{
    \vx - \vmux
  }
}

\newcommand{\mcenterednormaleq}[2]{
  \mnormalc{#2}
  \nexp{
    -\half
    \norm{
      {#2}\negsqrt
      {#1}
    }^2
  }
}

\newcommand{\mnormaldist}[3]{
  \norm{
    {#3}\negsqrt
    \parens{
      {#1} - {#2}
    }
  }^2
}

\newcommand{\mnormaleq}[3]{
  \mnormalc[#3]
  \nexp{
    -\half
    \mnormaldist{#1}{#2}{#3}
  }
}

