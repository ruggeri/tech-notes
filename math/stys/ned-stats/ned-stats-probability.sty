%% Conditional Probability functions

\newcommand{\condpr}[2]{
  \pr{#1 | #2}
}

% unnormalized conditional probability
\newcommand{\tcondpr}[2]{
  \tpr{#1 | #2}
}

%% Unconditional Density Functions

% Probability density function
\newcommand{\pr}[1]{
  p\parens{#1}
}

% Unnormalized density function
\newcommand{\tpr}[1]{
  \tilde{p}\parens{#1}
}

%% Named Helpers

% x
\newcommand{\px}{\pr{x}}
% conditional prob of x given mu_x
\newcommand{\cpxmux}{\condpr{x}{\mux}}
% conditional prob of vector x given mu_x
\newcommand{\cpvxmux}{\condpr{\vecx}{\vmux}}

% z
\newcommand{\cpvz}[1]{\condpr{\vz}{#1}}

% mu_x
\newcommand{\pmux}{\pr{\mux}}
% vector mu_x
\newcommand{\pvmux}{\pr{\vmux}}
% conditional probability of mu_x given x
\newcommand{\cpmuxx}{\condpr{\mux}{x}}
% conditional probability of vector mu_x given x
\newcommand{\cpvmuxx}{\condpr{\vmux}{\vecx}}
% unnormalized conditional probability of mu_x given x.
\newcommand{\tcpmuxx}{\tcondpr{\mux}{x}}
