\ProvidesPackage{ruggeri_statistics}

% Expectation/Variance

\newcommand{\expectation}[1]{
  \mathbb{E}
  \left[
    {#1}
  \right]
}

\newcommand{\Var}[1]{
  \operatorname{Var}
  \left[
    #1
  \right]
}

\newcommand{\pr}[1]{
  p\parens{#1}
}

\newcommand{\tpr}[1]{
  \tilde{p}\parens{#1}
}

\newcommand{\condpr}[2]{
  \pr{#1 | #2}
}

\newcommand{\tcondpr}[2]{
  \tpr{#1 | #2}
}
%% Gaussian Integral

\newcommand{\gaussianexp}[1][x]{
  \nexp{-{#1}^2}
}
\newcommand{\gaussianint}[1][x]{
  \int_\reals \gaussianexp[#1] \diff{#1}
}

%% Likelihood

\newcommand{\lhood}[2]{
  \mathcal{L}\parens{
    #1
    ;
    #2
  }
}

\newcommand{\llhood}[2]{
  \log\lhood{#1}{#2}
}

\newcommand{\nllhood}[2]{
  -\llhood{#1}{#2}
}

%% Normal Distribution

% Parameterizable normal distribution
\newcommand{\normal}[2]{
  \mathcal{N}\parens{#1, #2}
}
\newcommand{\normalc}[1]{
  \frac{1}{\sqrt{\twopi #1}}
}
\newcommand{\normaleq}[3][x]{
  \normalc{#3}
  \nexpf{
    \parens{#1 - #2}^2
  }{2 #3}
}
% This function is more general than the normal distribution.
\newcommand{\nexpf}[2]{
  \nexp{
    -\frac{#1}{#2}
  }
}

% Normals with standard parameters.
\newcommand{\nnormal}{
  \normal{\mu}{\var}
}
\newcommand{\nnormalc}{
  \normalc{\var}
}
\newcommand{\nnormaleq}[1][x]{
  \normaleq[#1]{\mu}{\var}
}

% Unit normal distribution
\newcommand{\snormal}{\normal{0}{1}}
\newcommand{\snormalc}{\invsqrttwopi}
\newcommand{\snormaleq}[1][x]{
  \snormalc
  \snormalexp[#1]
}
\newcommand{\snormalexp}[1][x]{
  \nexpf{{#1}^2}{2}
}

