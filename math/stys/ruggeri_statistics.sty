% Sqrt and pi helpers.
\newcommand{\invsqrtpi}{\frac{1}{\sqrtpi}}
\newcommand{\invsqrttwopi}{\frac{1}{\sqrttwopi}}
\newcommand{\sqrtpi}{\sqrt{\pi}}
\newcommand{\sqrttwo}{\sqrt{2}}
\newcommand{\sqrttwopi}{\sqrt{\twopi}}
\newcommand{\twopi}{2\pi}

\newcommand{\var}{\sigma^2}
