\ProvidesPackage{ruggeri_statistics}

% Expectation/Variance

\newcommand{\expectation}[1]{
  \mathbb{E}
  \left[
    {#1}
  \right]
}

\newcommand{\Var}[1]{
  \operatorname{Var}
  \left[
    #1
  \right]
}

%% Gaussian Integral

\newcommand{\gaussianexp}[1][x]{
  \nedexp{-{#1}^2}
}
\newcommand{\gaussianexps}[1][x]{
  \nedexps{-{#1}^2}
}
\newcommand{\gaussianint}[1][x]{
  \int_\reals \gaussianexp[#1] \diff{#1}
}

%% Normal Distribution

% Parameterizable normal distribution
\newcommand{\normal}[2]{\mathcal{N}(#1, #2)}
\newcommand{\normalc}[1]{\frac{1}{\sqrt{\twopi #1}}}
\newcommand{\normaleq}[2]{
  \normalc{#2}
  \normalexpsq{x - #1}{2 #2}
}
\newcommand{\normalexpsq}[2]{
  \normalexpf{
      \left( {#1} \right)^2
  }{
    #2
  }
}
\newcommand{\normalexpf}[2]{
  \nedexpb{
    -
    \frac{#1}{#2}
  }
}

% Normals with standard parameters.
\newcommand{\nnormal}{
  \normal{\mu}{\var}
}
\newcommand{\nnormalc}{
  \normalc{\var}
}
\newcommand{\nnormaleq}{
  \normaleq{\mu}{\var}
}
