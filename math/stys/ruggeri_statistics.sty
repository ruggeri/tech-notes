\ProvidesPackage{ruggeri_statistics}

% Expectation/Variance

\newcommand{\expectation}[1]{
  \mathbb{E}
  \left[
    {#1}
  \right]
}

\newcommand{\Var}[1]{
  \operatorname{Var}
  \left[
    #1
  \right]
}

%% Gaussian Integral

\newcommand{\gaussianexp}[1][x]{
  \nexp{-{#1}^2}
}
\newcommand{\gaussianint}[1][x]{
  \int_\reals \gaussianexp[#1] \diff{#1}
}

%% Normal Distribution

% Parameterizable normal distribution
\newcommand{\normal}[2]{
  \mathcal{N}\parens{#1, #2}
}
\newcommand{\normalc}[1]{
  \frac{1}{\sqrt{\twopi #1}}
}
\newcommand{\normaleq}[2]{
  \normalc{#2}
  \normalexpf{
    \parens{x - #1}^2
  }{2 #2}
}
\newcommand{\normalexpf}[2]{
  \nexp{
    -\frac{#1}{#2}
  }
}

% Normals with standard parameters.
\newcommand{\nnormal}{
  \normal{\mu}{\var}
}
\newcommand{\nnormalc}{
  \normalc{\var}
}
\newcommand{\nnormaleq}{
  \normaleq{\mu}{\var}
}

% Unit normal distribution
\newcommand{\snormal}{\normal{0}{1}}
\newcommand{\snormalc}{\invsqrttwopi}
\newcommand{\snormaleq}[1][x]{
  \snormalc
  \snormalexp[#1]
}
\newcommand{\snormalexp}[1][x]{
  \nexp{
    -\frac{{#1}^2}{2}
  }
}

%% Symbols

% Sqrt and pi helpers.
\newcommand{\invsqrtpi}{\frac{1}{\sqrtpi}}
\newcommand{\invsqrttwopi}{\frac{1}{\sqrttwopi}}
\newcommand{\sqrtpi}{\sqrt{\pi}}
\newcommand{\sqrttwo}{\sqrt{2}}
\newcommand{\sqrttwopi}{\sqrt{\twopi}}
\newcommand{\twopi}{2\pi}

\newcommand{\var}{\sigma^2}
