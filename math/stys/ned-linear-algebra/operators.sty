%% Inner Product

\newcommand{\innerprod}[2]{
  \left\langle #1, #2 \right\rangle
}
% Alias
\newcommand{\iprod}[2]{\innerprod{#1}{#2}}

%% Cross Product

% Just an alias, because I am stupid and hate \times.
\newcommand{\cross}[0]{\times}

%% Norm

\newcommand{\norm}[1]{
  \left\Vert #1 \right\Vert
}
\newcommand{\normsq}[1]{
  \left\Vert #1 \right\Vert^2
}

%% Transpose

\newcommand*{\tran}{
  ^{\mkern-1.5mu\mathsf{T}}
}

% Feels dumb, but otherwise you get "double superscript" problems.
\newcommand*{\ptran}{
  ^{\prime\mkern-1.5mu\mathsf{T}}
}

\newcommand{\vectransvec}[1]{
  \parenstrans{#1}
  \parens{#1}
}

\DeclareMathOperator{\proj}{proj}
\newcommand{\vproj}[2]{\proj_{#1}\parens{#2}}
