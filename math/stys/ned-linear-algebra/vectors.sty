\renewcommand{\vec}[1]{
  \mathrmbold{#1}
}

% Basis vector
\newcommand{\bvec}[1]{
  \vec{e}_{\mathrmbold{#1}}
}

% Zero vector
\newcommand{\veczero}{\vec{0}}

%% Common named vectors

\newcommand{\vecu}[1][]{
  \vec{u_{\mathrmbold{#1}}}
}
\newcommand{\vecv}{\vec{v}}
\newcommand{\vecw}{\vec{w}}
\newcommand{\vecx}{\vec{x}}
\newcommand{\vx}{\vec{x}}
\newcommand{\vecy}{\vec{y}}
\newcommand{\vecz}{\vec{z}}

%% Common named greek vectors

% mu
\newcommand{\vecmu}{\vec{\mu}}
\newcommand{\vmu}{\vecmu}
\newcommand{\vmup}{\vecmu^{\prime}}

% sigma
\newcommand{\vecsigma}{\vec{\sigma}}
