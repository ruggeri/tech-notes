\renewcommand{\vec}[1]{
  \mathrmbold{#1}
}

% Basis vector
\newcommand{\bvec}[1]{
  \vec{e}_{\mathrmbold{#1}}
}

% Zero vector
\newcommand{\veczero}{\vec{0}}

%% Common named vectors

% Macro to make vector macros!
%
% TODO: understand expandafter and csname better!
\newcommand{\newvec}[1]{
  \expandafter\newcommand\csname vec#1\endcsname{\vec{#1}}
  \expandafter\newcommand\csname v#1\endcsname{\vec#1}
}

\newvec{a}
\newvec{B}
\newvec{C}
\newvec{d}
\newvec{E}
\newvec{F}
\newvec{r}
\newvec{s}

\newcommand{\vecu}[1][]{
  \vec{u_{\mathrmbold{#1}}}
}

\newvec{v}
\newvec{w}
\newvec{x}
\newvec{y}
\newvec{z}

%% Common named greek vectors

% epsilon
\newcommand{\vepsilon}{\vec{\epsilon}}

% mu
\newcommand{\vecmu}{\vec{\mu}}
\newcommand{\vmu}{\vecmu}
\newcommand{\vmup}{\vecmu^{\prime}}

% sigma
\newcommand{\vecsigma}{\vec{\sigma}}
