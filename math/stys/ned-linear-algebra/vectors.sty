\newvec{r}
\newvec{s}
\newcommand{\vu}{\vec{u}}

\newcommand{\vecu}[1][]{
  \vec{u_{\mathrmbold{#1}}}
}

\newvec{v}
\newvec{w}
\newvec{x}
