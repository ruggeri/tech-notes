\renewcommand{\vec}[1]{
  \mathrmbold{#1}
}

% Basis vector
\newcommand{\bvec}[1]{
  \vec{e}_{\mathrmbold{#1}}
}

% Zero vector
\newcommand{\veczero}{\vec{0}}

%% Common named vectors

\newcommand{\vecB}{\vec{B}}
\newcommand{\vB}{\vecB}
\newcommand{\vecE}{\vec{E}}
\newcommand{\vE}{\vecE}
\newcommand{\vecF}{\vec{F}}
\newcommand{\vF}{\vecF}
\newcommand{\vecr}{\vec{r}}
\newcommand{\vr}{\vecr}
\newcommand{\vecu}[1][]{
  \vec{u_{\mathrmbold{#1}}}
}
\newcommand{\vecv}{\vec{v}}
\newcommand{\vv}{\vecv}
\newcommand{\vecw}{\vec{w}}
\newcommand{\vecx}{\vec{x}}
\newcommand{\vx}{\vec{x}}
\newcommand{\vecy}{\vec{y}}
\newcommand{\vy}{\vecy}
\newcommand{\vecz}{\vec{z}}
\newcommand{\vz}{\vecz}

%% Common named greek vectors

% epsilon
\newcommand{\vepsilon}{\vec{\epsilon}}

% mu
\newcommand{\vecmu}{\vec{\mu}}
\newcommand{\vmu}{\vecmu}
\newcommand{\vmup}{\vecmu^{\prime}}

% sigma
\newcommand{\vecsigma}{\vec{\sigma}}
