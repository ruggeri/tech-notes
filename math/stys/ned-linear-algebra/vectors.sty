\renewcommand{\vec}[1]{
  \mathrmbold{#1}
}

% Column vector
\newcommand{\colvec}[1]{
  \begin{pmatrix}
    #1
  \end{pmatrix}
}

% Basis vector
\newcommand{\bvec}[1]{
  \vec{e}_{\mathrmbold{#1}}
}

% Zero vector
\newcommand{\veczero}{\vec{0}}

%% Common named vectors

% Macro to make vector macros!
%
% TODO: understand expandafter and csname better!
\newcommand{\newvec}[1]{
  \expandafter\newcommand\csname vec#1\endcsname{\vec{#1}}
  \expandafter\newcommand\csname v#1\endcsname{\vec#1}
}

