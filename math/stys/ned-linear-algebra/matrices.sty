\newcommand{\mtx}[1]{
  \mathrmbold{#1}
}

% Would be great if this worked for n-dimensional matrices right?
\newcommand{\diagonal}[3]{
  \begin{bmatrix}
    #1 \\
      &#2 \\
      &  &\ddots \\
      &  & & #3
  \end{bmatrix}
}

%% Spaces Of Matrices

\newcommand{\mtxspace}[1]{
  \reals^{#1 \times #1}
}

%% Common Matrices

\newcommand{\mtxA}{\mtx{A}}
\newcommand{\mtxB}{\mtx{B}}
\newcommand{\mtxD}{\mtx{D}}
\newcommand{\mtxI}{\mtx{I}}
\newcommand{\mtxL}{\mtx{L}}
\newcommand{\mtxQ}{\mtx{Q}}
\newcommand{\mtxR}{\mtx{R}}
\newcommand{\mtxU}{\mtx{U}}
