%% Definition Symbols

\newcommand{\defeq}{\coloneqq}
\newcommand{\minuseq}{\mathrel{-}=}

%% Common Sets

\newcommand{\setof}[1]{
  \left\{ #1 \right\}
}
\newcommand{\reals}{\mathbb{R}}
\newcommand{\rn}{\reals^n}

% Exponent macros

\newcommand{\nexp}[1]{
  \exp\parens{#1}
}
\newcommand{\nexpb}[1]{
  \exp\bparens{#1}
}
\newcommand{\nexpB}[1]{
  \exp\Bparens{#1}
}
\newcommand{\nexpBb}[1]{
  \exp\Bbparens{#1}
}

%% Misc

\newcommand{\bsum}[0]{\sum\limits}
\newcommand{\define}[1]{\textit{#1}}
\newcommand{\half}{\frac{1}{2}}
\newcommand{\inv}[1]{{#1}^{-1}}
\newcommand{\invf}[1]{\frac{1}{#1}}
% There is probably little reason to prefer \inv to \invx...
\newcommand{\invx}{^{-1}}
\newcommand{\negsqrt}{^{-1/2}}

%% Parentheses

% Source https://tex.stackexchange.com/questions/2607/spacing-around-left-and-right
\newcommand{\parens}[1]{
  \mathopen{}\left(
    {#1}
  \right)\mathclose{}
}
\newcommand{\sqbrackets}[1]{
  \mathopen{}\left[
    {#1}
  \right]\mathclose{}
}
\newcommand{\bparens}[1]{\bigl({#1}\bigr)}
\newcommand{\Bparens}[1]{\Bigl({#1}\Bigr)}
\newcommand{\Bbparens}[1]{\biggl({#1}\biggr)}

\newcommand{\parensinv}[1]{
  \mathopen{}\left(
    {#1}
  \right)^{-1}\mathclose{}
}

\newcommand{\parensq}[1]{
  \mathopen{}\left(
    {#1}
  \right)^{2}\mathclose{}
}

\newcommand{\parensqrt}[1]{
  \mathopen{}\left(
    {#1}
  \right)^{1/2}\mathclose{}
}

\newcommand{\parensnegsqrt}[1]{
  \mathopen{}\left(
    {#1}
  \right)^{-1/2}\mathclose{}
}

\newcommand{\parenstrans}[1]{
  \mathopen{}\left(
    {#1}
  \right)\tran\mathclose{}
}

%% Theorem Environments

\theoremstyle{plain} \newtheorem{theorem}{Theorem}
% Lemmas should use same count as theorems.
\theoremstyle{plain} \newtheorem{lemma}[theorem]{Lemma}
