%% Parentheses

% Why mathclose?
% https://tex.stackexchange.com/questions/2607/spacing-around-left-and-right
\newcommand{\parens}[1]{
  \mathopen{}\left(
    {#1}
  \right)\mathclose{}
}

\newcommand{\sqbrackets}[1]{
  \mathopen{}\left[
    {#1}
  \right]\mathclose{}
}

% Parenthesis sizes
\newcommand{\bparens}[1]{\bigl({#1}\bigr)}
\newcommand{\Bparens}[1]{\Bigl({#1}\Bigr)}
\newcommand{\Bbparens}[1]{\biggl({#1}\biggr)}

% Various superscript operations look better "pulled in" to the macro
% because of mathclose.

%% Parentheses inverse
\newcommand{\parensinv}[1]{
  \mathopen{}\left(
    {#1}
  \right)^{-1}\mathclose{}
}

%% Parentheses squared
\newcommand{\parensq}[1]{
  \mathopen{}\left(
    {#1}
  \right)^{2}\mathclose{}
}

%% Parentheses sqrt
\newcommand{\parensqrt}[1]{
  \mathopen{}\left(
    {#1}
  \right)^{1/2}\mathclose{}
}

%% Parentheses negsqrt
\newcommand{\parensnegsqrt}[1]{
  \mathopen{}\left(
    {#1}
  \right)\negsqrt\mathclose{}
}

%% Parentheses transpose
\newcommand{\parenstrans}[1]{
  \mathopen{}\left(
    {#1}
  \right)\tran\mathclose{}
}
